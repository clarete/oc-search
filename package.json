{
  "name": "oc-search",
  "version": "0.0.1",
  "description": "Search for collectives in OC's database",
  "main": "index.js",
  "repository": "https://github.com/clarete/oc-search",
  "author": "Lincoln Clarete <lincoln@clarete.li>",
  "license": "AGPL-3.0",
  "dependencies": {
    "express": "^4.16.2",
    "knex": "^0.14.2",
    "morgan": "^1.9.0",
    "mysql": "^2.15.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.0.4",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-flowtype": "^2.41.0",
    "eslint-plugin-import": "^2.8.0",
    "flow-bin": "^0.63.1",
    "flow-typed": "^2.2.3",
    "jest": "^22.0.5"
  },
  "jest": {
    "testRegex": "tests/.*/*.js",
    "rootDir": ".",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "server/index.js"
    ],
    "collectCoverageFrom": [
      "server/*.js",
      "server/*/*.js"
    ],
    "testPathIgnorePatterns": [
      "node_modules/.*"
    ]
  },
  "scripts": {
    "dist": "babel server/*.js server/**/*.js -d dist",
    "dist:watch": "babel --watch server/*.js -d dist",
    "start": "node dist/server/index.js",
    "test": "eslint . && flow check $* && jest --coverage $*"
  }
}
